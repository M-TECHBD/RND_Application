@model IEnumerable<CrudOperationUsionPartialView.Models.Product>
@{
    ViewData["Index"] = "Index";
    ViewData["Id"] = 0;

}
<button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="@("#addProduct-" + ViewData["Id"])" data-url="@Url.Action("Create")">Add Product</button>
@* Using for Same page
 *@@* <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="@("#addProduct-" + ViewData["Id"])" data-url="@Url.Action("Create")">Add Product</button> *@
@* <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
 *@
<hr />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Product_ID)</td>
                <td>@Html.DisplayFor(modelItem => item.Product_Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>
                    @* Using for Same Page
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="@("#addProduct-"+item.Product_ID)" data-url="@Url.Action($"Create/{item.Product_ID}")" > Edit </button > *@
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="@("#editProduct-" + item.Product_ID)" data-url="@Url.Action($"Edit/{item.Product_ID}")"> Edit </button>
                    @await Html.PartialAsync("_EditParitial", item)
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@("#deleteProduct-" + item.Product_ID)" data-url="@Url.Action($"Delete/{item.Product_ID}")"> Delete </button>
                    @await Html.PartialAsync("_DeletePartial", item)
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="@("#detailsProduct-" + item.Product_ID)" data-url="@Url.Action($"Details/{item.Product_ID}")"> Details </button>
                    @await Html.PartialAsync("_DetailsPartial", item)
                </td>

            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_ProductPartialView", new Product())
