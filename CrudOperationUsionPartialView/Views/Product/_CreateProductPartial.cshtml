@model  CrudOperationUsionPartialView.Models.Product
<div class="modal show" id="addProduct" tabindex="-1" aria-labelledby="addProductLabel" aria-modal="true" data-backdrop="false"
     role="dialog" @* class="modal fade" id="addProduct" data-backdrop="false" role="dialog" *@>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="addProductLabel">Product</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                <span aria-hidden="true">&times;</span>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Product_ID" value="0" />
                    <div class="form-group">
                        <label asp-for="Product_Name" class="custom-control-label"></label>
                        <input asp-for="Product_Name" class="from-control" />
                        <span asp-validation-for="Product_Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="custom-control-label"></label>
                        <input asp-for="Price" class="from-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="custom-control-label"></label>
                        <input asp-for="Quantity" class="from-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade show" id="backdrop" style="display: none;"></div>